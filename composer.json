{
    "name": "moahada/laravel-permission-mongodb",
    "description": "Permission handling for Laravel 5.2 and up using mongodb",
    "keywords": [
        "laravel",
        "security",
        "mongodb",
        "permission",
        "acl",
        "Moahada",
        "mostafa",
        "spatie",
        "jenssegers"
    ],
    "homepage": "https://github.com/mostafaMoahada/laravel-permission-mongodb",
    "license": "MIT",
    "authors": [
        {
            "name": "Mostafa Moahada",
            "email": "dev.mostafa.Moahada@gmail.com",
            "homepage": "https://github.com/mostafaMoahada",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "The original module"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/auth": "^6.0|^7.0|^8.0",
        "illuminate/container": "^6.0|^7.0|^8.0",
        "illuminate/contracts": "^6.0|^7.0|^8.0",
        "jenssegers/mongodb": "^3.0"
    },
    "require-dev": {
        "monolog/monolog": "^1.23|^2.0",
        "orchestra/testbench": "^3.2|^4.0|^5.0",
        "phpunit/phpunit": "^5.7|^6.0|^7.0|^8.0",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Moahada\\Permission\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Moahada\\Permission\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=psr2 src/",
        "fix-style": "phpcbf --standard=psr2 src/"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Moahada\\Permission\\PermissionServiceProvider"
            ]
        }
    }
}
